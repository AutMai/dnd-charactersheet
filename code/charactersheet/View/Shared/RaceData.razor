@using Model.Entities

<div>
    <h2>@Race.Name</h2><hr/>
    <p>@Race.Description</p>
    <p>
        <b>Speed: </b>@Race.Speed
    </p>
    <p>
        <b>Size: </b>@Race.Size
    </p>
    <hr/>
    <h3>Traits</h3>
    @foreach (var trait in Race.Traits.OrderBy(t => t.Label)) {
        <h4 class="mb-1 mt-3">
            <b>@trait.Label</b>
        </h4>
        <p>@((MarkupString)trait.Description)</p>
    }
    <hr/>
</div>


@code {

    [Parameter]
    public Race Race { get; set; }

}